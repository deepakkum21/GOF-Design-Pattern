<Configuration xmlns="http://logging.apache.org/log4j/2.0/config">
	<Appenders>
		<File name="ConversionObserverPattern" fileName="LogFile\Conversion.log" append="true">
			<PatternLayout
				pattern="%-5p | %d{yyyy-MM-dd HH:mm:ss} | [%t] %C{2} (%F:%L) - %m%n" />
		</File>		
		
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout
				pattern=" %m%n" />
		</Console>
	</Appenders>
	<Loggers>
	<Logger name="com.deepak.gof.observer.demo1.ObserverPatternDemo" level="info" additivity="false">
			<AppenderRef ref="STDOUT" />
			<AppenderRef ref="ConversionObserverPattern" />
		</Logger>
		  
		<Root level="info">
			<AppenderRef ref="STDOUT" />
			
		</Root>
	</Loggers>
</Configuration>